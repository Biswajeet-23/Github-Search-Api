<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailsActivity"
    android:background="#1A1D2B">

    <TextView
        android:id="@+id/owner"
        android:layout_width="200dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/imageParent"
        android:textColor="#BCBCBC"
        android:textStyle="bold"
        android:textSize="23sp"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"/>

    <LinearLayout
        android:id="@+id/imageParent"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="170dp"
        android:background="@drawable/image_back_background">

        <ImageView
            android:id="@+id/avatar_img"
            android:layout_width="138dp"
            android:layout_height="138dp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="6dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvStar"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageParent"
        android:textAlignment="center"
        android:text="90"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#BCBCBC"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/starCount"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvStar"
        android:text="Starred"
        android:textAlignment="center"
        android:textSize="11sp"
        android:textColor="#BCBCBC"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/tvFork"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageParent"
        android:textAlignment="center"
        android:text="90"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#BCBCBC"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/forkCount"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFork"
        android:text="Forked"
        android:textAlignment="center"
        android:textSize="11sp"
        android:textColor="#BCBCBC"
        android:layout_marginEnd ="20dp"/>

    <TextView
        android:id="@+id/tvWatch"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/starCount"
        android:textAlignment="center"
        android:text="90"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#BCBCBC"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/watchCount"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvWatch"
        android:text="Watched"
        android:textAlignment="center"
        android:textSize="11sp"
        android:textColor="#BCBCBC"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/tvSubs"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forkCount"
        android:textAlignment="center"
        android:text="90"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#BCBCBC"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/subsCount"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSubs"
        android:text="Subscribers"
        android:textAlignment="center"
        android:textSize="11sp"
        android:textColor="#BCBCBC"
        android:layout_marginEnd ="20dp"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Title"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#BCBCBC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/watchCount"/>

    <TextView
        android:id="@+id/desc"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#BCBCBC"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"/>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="26dp"
        android:layout_height="90dp"
        android:text="This is a Hello World"
        android:textColor="#BCBCBC"
        android:maxLines="4"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/add_repo"
        android:layout_width="150dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/lineBorder"
        android:layout_marginTop="50dp"
        android:textColor="#1A1D2B"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:textSize="17sp"
        android:text="@string/add_to_repo"
        android:background="@drawable/line_background"/>

    <TextView
        android:id="@+id/lineBorder"
        android:layout_width="100dp"
        android:layout_height="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:background="@drawable/line_background"/>

</androidx.constraintlayout.widget.ConstraintLayout>